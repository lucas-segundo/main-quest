generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DATABASE_URL")
}

model Class {
  id        Int      @id @default(autoincrement())
  name      String
  subclasses Subclass[]

  @@map("classes")
}

model Subclass {
  id        Int      @id @default(autoincrement())
  name      String
  classID   Int      @map("class_id")
  class     Class    @relation(fields: [classID], references: [id])

  @@map("subclasses")
}

model Skill {
  id        Int      @id @default(autoincrement())
  name      String

  @@map("skills")
}